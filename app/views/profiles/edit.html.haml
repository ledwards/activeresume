%div#header
	%h1 My Profile

%div#content
	%h3 
	= form_for(@profile) do |f|
		%div
			= f.label :first_name
			= f.text_field :first_name, :class => "title", :title => "First name"
		%div
			= f.label :middle_name
			= f.text_field :middle_name, :class => "title", :title => "Middle name"
		%div
			= f.label :last_name
			= f.text_field :last_name, :class => "title", :title => "Last name"
		%div
			= f.label :summary
			= f.text_area :summary, :class => "title", :title => "Summary"
		%div
			= f.label :address_line_1
			= f.text_field :address_line_1, :class => "title", :title => "Address line 1"
		%div
			= f.label :address_line_2, :class => :hidden
			= f.text_field :address_line_2, :class => "title", :title => "Address line 2"
		%div
			= f.label :city
			= f.text_field :city, :class => "title", :title => "City"
		%div
			= f.label :state
			= f.text_field :state, :class => "title", :title => "State"
		%div
			= f.label :zip_code
			= f.text_field :zip_code, :class => "title", :title => "Zip code"
		%div
			= f.label :phone
			= f.text_field :phone, :class => "title", :title => "Phone number"
		%div
			= f.label :email
			= f.text_field :email, :class => "title", :title => "E-mail"
		%div
			= f.label :website
			= f.text_field :website, :class => "title", :title => "Website"
		%div
			= f.submit "Save", :class => "save_button"

%div.spacer
	%br/

%div#sidebar
	%h3 
	
%div#footer