!!!
%html
	%head
		%title Active Resume
		= stylesheet_link_tag 'screen.css', :media => 'screen, projection'
		= stylesheet_link_tag 'print.css', :media => 'print'
		
		= stylesheet_link_tag 'buttons.css', :media => 'screen, projection'
		= stylesheet_link_tag 'iphone-style-checkboxes.css', :media => 'screen, projection'
		
		/[if IE]
		= stylesheet_link_tag 'ie.css', :media => 'screen, projection'
		/[if lt IE 7]
		= stylesheet_link_tag 'ie6.css', :media => 'screen, projection'
		
		= javascript_include_tag :defaults, "jquery.watermark.min", "jquery.iphone-style-checkboxes"
		= csrf_meta_tag
		%body{ :class => [controller_name, "bp"] }
			%div#container
				= yield
